<Window x:Class="Feleves_EC211O.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Feleves_EC211O"
        xmlns:vm="clr-namespace:Feleves_EC211O.Application"
        mc:Ignorable="d"
        Background="#0D0D0D" Foreground="White" FontFamily="Consolas"
        Title="Forma–1 Köridőmérő" Height="600" Width="800">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <StackPanel Margin="20">

        <TextBlock Text="Forma–1 Köridőmérő" 
                   FontSize="26" FontWeight="Bold" 
                   Foreground="#E10600" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <TextBlock Text="Aktuális versenyző:"
                   FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
        <ComboBox x:Name="DriverSelector"
                  Width="200"
                  ItemsSource="{Binding Drivers}"
                  SelectedItem="{Binding SelectedDriver}"
                  Background="#1E1E1E"
                  Foreground="Black"
                  BorderBrush="#E10600"
                  FontWeight="Bold"
                  HorizontalAlignment="Left"
                  Margin="0,0,0,20"/>

        <TextBlock Text="{Binding CurrentTime}"
                   FontSize="48"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,20"
                   Foreground="White"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button Content="Start / Stop" Command="{Binding StartStopCommand}" Width="100" Margin="5,0"/>
            <Button Content="Lap" Command="{Binding LapCommand}" Width="100" Margin="5,0"/>
            <Button Content="Reset" Command="{Binding ResetCommand}" Width="100" Margin="5,0"/>
            <Button Content="Törlés" Command="{Binding DeleteLapCommand}" Width="100" Margin="5,0"/>
        </StackPanel>

        <Border BorderBrush="#E10600" BorderThickness="2" CornerRadius="8" Margin="0,10,0,0">
            <ListBox ItemsSource="{Binding LapTimes}"
                     SelectedItem="{Binding SelectedLap}"
                     Height="220"
                     Background="#1E1E1E"
                     BorderThickness="0"
                     Foreground="White"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="10,3">
                            <TextBlock Text="{Binding Driver}" Width="120" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="Kör: " Foreground="White"/>
                            <TextBlock Text="{Binding Number}" Width="30" Foreground="White"/>
                            <TextBlock Text=" | " Foreground="White"/>
                            <TextBlock Text="{Binding Time, StringFormat='{}{0:hh\\:mm\\:ss}'}" Foreground="White"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <Button Content="Eredménytábla"
                Command="{Binding ShowResultsCommand}"
                HorizontalAlignment="Center"
                Width="200"
                Height="40"
                Margin="0,20,0,0"
                Background="#1E1E1E"
                BorderBrush="#E10600"
                BorderThickness="2"
                FontWeight="Bold"
                Foreground="White"
                Cursor="Hand">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        >
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#E10600"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

    </StackPanel>
</Window>
